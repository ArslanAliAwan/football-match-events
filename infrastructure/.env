# AWS Configuration
AWS_DEFAULT_REGION=us-east-1  # Change to your preferred region
AWS_ACCOUNT_ID=your-account-id  # Replace with your AWS account ID

# S3 Bucket Configuration
RAW_EVENTS_BUCKET_NAME=raw-match-events-bucket

# DynamoDB Table Configuration
DYNAMODB_TABLE_NAME=match-events-table
DYNAMODB_PARTITION_KEY=match_id
DYNAMODB_SORT_KEY=timestamp

# EventBridge Configuration
EVENT_BUS_NAME=football-match-events-bus

# Lambda Function Configurations
INGESTION_LAMBDA_NAME=football-match-events-ingestion
PROCESSING_LAMBDA_NAME=football-match-events-processing
QUERY_LAMBDA_NAME=football-match-events-query

# API Gateway Configuration
API_GATEWAY_NAME=football-match-events-api
API_STAGE_NAME=prod

# Lambda Runtime
#LAMBDA_RUNTIME=nodejs18.x

# Lambda Timeout and Memory Settings
LAMBDA_TIMEOUT_SECONDS=30
LAMBDA_MEMORY_SIZE=256

# Optional: Logging and Monitoring
API_LOGGING_LEVEL=INFO
METRICS_ENABLED=true

# S3 Bucket Lifecycle Configuration
S3_OBJECT_EXPIRATION_DAYS=30
S3_INFREQUENT_ACCESS_TRANSITION_DAYS=15
